<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Avatar"
                android:layout_width="165dp"
                android:layout_height="140dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/field_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/field_birthday"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.46"
                app:layout_constraintStart_toEndOf="@+id/Avatar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/value_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/value_birthday"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Avatar"
                app:layout_constraintTop_toBottomOf="@+id/field_birthday" />

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/Avatar"
                app:layout_constraintTop_toBottomOf="@+id/value_birthday">

                <TextView
                    android:id="@+id/field_next_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/field_next_birthday" />
            </ScrollView>

            <TextView
                android:id="@+id/value_next_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Avatar"
                app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

            <TextView
                android:id="@+id/field_patron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="@string/field_patron"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/field_second_name" />

            <TextView
                android:id="@+id/field_second_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="@string/field_second_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/field_first_name" />

            <TextView
                android:id="@+id/field_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/field_group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/specialization_view" />

            <TextView
                android:id="@+id/field_specialization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/field_specialization"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/department_view" />

            <TextView
                android:id="@+id/value_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:text="@string/value_email"
                app:layout_constraintStart_toEndOf="@+id/field_email"
                app:layout_constraintTop_toBottomOf="@+id/field_group" />

            <TextView
                android:id="@+id/value_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/value_first_name"
                app:layout_constraintStart_toEndOf="@+id/field_first_name"
                app:layout_constraintTop_toBottomOf="@+id/field_work_num" />

            <TextView
                android:id="@+id/value_second_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/value_second_name"
                app:layout_constraintStart_toEndOf="@+id/field_second_name"
                app:layout_constraintTop_toBottomOf="@+id/field_first_name" />

            <TextView
                android:id="@+id/value_work_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="40dp"
                android:text="@string/value_work_num"
                app:layout_constraintStart_toEndOf="@+id/field_work_num"
                app:layout_constraintTop_toBottomOf="@+id/Avatar" />

            <TextView
                android:id="@+id/field_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/field_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/field_group" />

            <TextView
                android:id="@+id/field_work_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:text="@string/field_work_num"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Avatar" />

            <TextView
                android:id="@+id/value_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:text="@string/value_group"
                app:layout_constraintStart_toEndOf="@+id/field_group"
                app:layout_constraintTop_toBottomOf="@+id/specialization_view" />

            <TextView
                android:id="@+id/field_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="@string/field_first_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/field_work_num" />

            <TextView
                android:id="@+id/value_patron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/value_patron"
                app:layout_constraintStart_toEndOf="@+id/field_patron"
                app:layout_constraintTop_toBottomOf="@+id/field_second_name" />

            <TextView
                android:id="@+id/field_department"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="@string/field_department"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/field_patron" />

            <ScrollView
                android:id="@+id/specialization_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/field_specialization"
                app:layout_constraintTop_toBottomOf="@+id/department_view">

                <TextView
                    android:id="@+id/value_specialization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/value_specialization" />
            </ScrollView>

            <ScrollView
                android:id="@+id/department_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/field_department"
                app:layout_constraintTop_toBottomOf="@+id/field_patron">

                <TextView
                    android:id="@+id/value_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/value_department" />
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Department -->

    <!-- Specialization -->

    <!-- Group -->

    <!-- Email -->


</androidx.constraintlayout.widget.ConstraintLayout>